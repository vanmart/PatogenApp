<style type="text/css">
    html, body {
      margin: 0;
      padding: 0;
    }

    * {
      box-sizing: border-box;
    }

    .slider {
        width: 70%;
        margin: 0px auto;
        margin-top: 100px;
    }

    .slick-slide {
      margin: 0px 20px;
    }

    .slick-slide img {
      width: 100%;
      height: 250px;

    }

    .slick-slide div {
      width: 100%;
    }

    .slick-prev:before,
    .slick-next:before {
      color: black;
    }


    .slick-slide {
      transition: all ease-in-out .3s;
      opacity: .2;
    }

    .slick-active {
      opacity: .5;
    }

    .slick-current {
      opacity: 1;
    }

    .card{
      box-shadow: 5px 1px 5px rgb(3, 35, 7), 4px 0px 10px rgb(15, 62, 1);
    }


/* =============================================================================
  Resolutions control
============================================================================= */

    /* different techniques for iPad screening */
    @media only screen and (min-width: 0px) and (max-width: 560px) {
      /* For portrait layouts only */
      * {
        box-sizing: border-box;
      }

      .slider {
          width: 100%;
          margin: 0px auto;
          margin-top: 100px;
      }

      .slick-slide {
        margin: 0px 0px;
      }

      .slick-slide div {
        width: 100%;
      }

      .slick-slide img {
        width: 100%;
        height: 150px;
      }

      .slick-prev:before,
      .slick-next:before {
        color: black;
      }


      .slick-slide {
        transition: all ease-in-out .2s;
        opacity: .2;
      }

      .slick-active {
        opacity: .5;
      }

      .slick-current {
        opacity: 1;
        margin: 0px 0px;
        width: 250px;

      }

      .card{
        box-shadow: 5px 1px 5px rgb(3, 35, 7), 4px 0px 10px rgb(15, 62, 1);
      }

      .slick-prev {
        left: 0px;
      }

      .slick-next {
        right: 0px;
      }

    }


