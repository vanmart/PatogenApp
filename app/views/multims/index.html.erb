<%- model_class = Multim -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:link) %></th>
      <th><%= model_class.human_attribute_name(:multim_type) %></th>
      <th><%= model_class.human_attribute_name(:culture_id) %></th>
      <th><%= model_class.human_attribute_name(:pathogen_id) %></th>
      <th><%= model_class.human_attribute_name(:disease_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @multims.each do |multim| %>
      <tr>
        <td><%= multim.id %></td>
          <td><%= multim.link %></td>
          <td><%= multim.multim_type %></td>
          <td><%= multim.culture_id %></td>
          <td><%= multim.pathogen_id %></td>
          <td><%= multim.disease_id %></td>
        <td><%=l multim.created_at, format: :long %></td>
        <td>
          <%= link_to multim_path(multim), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_multim_path(multim), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to multim_path(multim), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")),
            new_multim_path,
            class: 'btn btn-primary' %>
