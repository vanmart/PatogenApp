<div class="navbar navbar-default navbar-static-top">
      <div class="container">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <div class="navbar-brand">
          <div class="brand__border">
            <%= link_to image_tag("patogenapp_brand.png", :class=>"brand_image"), home_landing_path , :alt => "Vive movilidad" %>
          </div>
          <small class="align-middle small-brand-text" > <strong style="color: black">Patogen</strong><strong >App</strong> </small>
        </div>


        <div class="navbar-collapse collapse navbar-responsive-collapse">
          <ul class="nav navbar-nav navbar-right ">
            <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <i class="fa fa-user" aria-hidden="true"></i>
                  <%= current_user.email %>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to edit_user_registration_path do %>
                      <i class="fa fa-user-plus" aria-hidden="true"></i> Edit User
                    <%end%>
                  </li>
                  <li>
                    <% if user_signed_in? %>
                      <% if current_user.has_any_role? :Admin, :MasterAdmin %>
                        <%= link_to rails_admin_path do %>
                          <i class="fa fa-user-plus" aria-hidden="true"></i> Go to Dashboard
                        <%end%>
                      <%end%>
                    <%end%>
                  </li>
                  <hr>
                  <li>
                    <%= link_to destroy_user_session_path, :method => :delete do %>
                      <i class="fa fa-sign-out" aria-hidden="true"></i> LogOut
                    <%end%>
                  </li>
                </ul>
              </li>
            <%else%>
              <li>
                <%= link_to('Register', new_user_registration_path)  %>
              </li>
              <li>
                <%= link_to('Login', new_user_session_path)  %>
              </li>
            <%end%>
          </ul>
        </div>
      </div>
    </div>