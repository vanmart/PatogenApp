<%= form_for @disease, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :symptom, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :symptom, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :economic_damage, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :economic_damage, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  diseases_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
