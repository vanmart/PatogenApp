<%= form_for @pathogen, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :scientific_name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :scientific_name, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :description, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :epidemiology, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :epidemiology, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :economic_damage, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :economic_damage, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :taxonomic_table_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :taxonomic_table_id, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  pathogens_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
