<%- model_class = TaxonomicTable -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:kingdom) %></th>
      <th><%= model_class.human_attribute_name(:division) %></th>
      <th><%= model_class.human_attribute_name(:t_class) %></th>
      <th><%= model_class.human_attribute_name(:order) %></th>
      <th><%= model_class.human_attribute_name(:family) %></th>
      <th><%= model_class.human_attribute_name(:gender) %></th>
      <th><%= model_class.human_attribute_name(:species) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @taxonomic_tables.each do |taxonomic_table| %>
      <tr>
        <td><%= taxonomic_table.id %></td>
          <td><%= taxonomic_table.kingdom %></td>
          <td><%= taxonomic_table.division %></td>
          <td><%= taxonomic_table.t_class %></td>
          <td><%= taxonomic_table.order %></td>
          <td><%= taxonomic_table.family %></td>
          <td><%= taxonomic_table.gender %></td>
          <td><%= taxonomic_table.species %></td>
        <td><%=l taxonomic_table.created_at, format: :long %></td>
        <td>
          <%= link_to taxonomic_table_path(taxonomic_table), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_taxonomic_table_path(taxonomic_table), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to taxonomic_table_path(taxonomic_table), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")),
            new_taxonomic_table_path,
            class: 'btn btn-primary' %>
